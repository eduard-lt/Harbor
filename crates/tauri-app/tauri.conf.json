{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Harbor",
  "version": "0.6.0",
  "identifier": "com.harbor.app",
  "build": {
    "beforeBuildCommand": "npm run build --prefix ../../packages/ui",
    "beforeDevCommand": "npm run dev --prefix ../../packages/ui",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../../packages/ui/dist"
  },
  "app": {
    "windows": [
      {
        "title": "Harbor",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      }
    }
  }
}
